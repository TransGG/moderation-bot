{
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "lib": ["es5", "es6", "dom", "dom.iterable"],
    "paths": {
      "@database/*": ["database/*"],
      "@interactionHandling/*": ["interactionHandling/*"],
      "@resources/*": ["resources/*"],
      "@utils.js": ["utils.js"]
    }
  }
}
